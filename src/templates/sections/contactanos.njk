{% extends "partials/base.njk" %}

{% block meta %}
<title>Contáctanos</title>
{% endblock %}

{% block content %}
<div class="contact">
  <h1 class="contact-title">Contáctanos</h1>
  <div class="contact-form-card-container">
    <div class="contact-form-card">
      <form>
        <div class="contact-form-rows nunitosans-regular">
          <div class="contact-form-rows-content">
            <div class="contact-form-content">
              <label class="contact-form-label nunitosans-bold">Nombre*</label>
              <input class="contact-form-input" type="text" name="name" required>
            </div>
            <div class="contact-form-content">
              <label class="contact-form-label nunitosans-bold">Teléfono</label>
              <input class="contact-form-input" type="tel" name="phone">
            </div>
            <div class="contact-form-content">
              <label class="contact-form-label nunitosans-bold">Mensaje</label>
              <textarea class="contact-form-input" type="text" name="message" placeholder="Escribe aquí..."></textarea>
            </div>
          </div>
          <div class="contact-form-rows-content">
            <div class="contact-form-content">
              <label class="contact-form-label nunitosans-bold">Correo  electrónico*</label>
              <input class="contact-form-input" type="email" name="email" required>
            </div>
            <div class="contact-form-content">
              <label class="contact-form-label nunitosans-bold">Compañía / Organización</label>
              <input class="contact-form-input" type="text" name="company">
            </div>
          </div>
        </div>
        <button class="wicore-button nunitosans-extrabold" type="submit">Enviar</button>
      </form>
    </div>
  </div>
  <div class="contact-panel nunitosans-regular">
    <div class="contact-panel-content">
      <div>
        <a href="">
          <div class="contact-panel-info-container">
            <img class="contact-icon-location" src="img/icons/icon-location.png">
            <div class="contact-panel-info">
              <span class="nunitosans-bold">Centro de Distribución</span><br>
              <span>Parque Industrial Tultipark II.</span><br>
              <span>Tultitlán Edo. México CP 54948</span>
            </div>
          </div>
        </a>
        <a href="">
          <div class="contact-panel-info-container">
            <img class="contact-icon-location" src="img/icons/icon-location.png">
            <div class="contact-panel-info">
              <span class="nunitosans-bold">Oficinas</span><br>
              <span>Calle Montes Urales 424, Lomas de</span><br>
              <span>Chapultepec V Secc. CDMX</span>
            </div>
          </div>
        </a>
      </div>
      <div class="contact-panel-separator"></div>
      <div>
        <div class="contact-panel-info-container align-icons">
          <img class="contact-icon-phone" src="img/icons/icon-phone.png">
          <div>
            <span class="contact-panel-info">+(52)55.1209.1276</span>
          </div>
        </div>
        <div class="contact-panel-info-container align-icons">
          <img class="contact-icon-mail" src="img/icons/icon-mail.png">
          <div>
            <span class="contact-panel-info">hola@wicore.mx</span>
          </div>
        </div>
      </div>
      <div class="contact-panel-separator"></div>
      <div class="contact-panel-social-container">
        <a href="https://www.linkedin.com/company/wicoremx/" target="_blank">
          <div>
            <img class="contact-panel-social" src="img/icons/icon-in-white.png">
          </div>
        </a>
        <a href="" target="_blank">
          <div>
            <img class="contact-panel-social" src="img/icons/icon-fb-white.png">
          </div>
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
