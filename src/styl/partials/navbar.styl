.site-navbar
  align-items center
  display flex
  height 145px
  justify-content flex-start
  left 0
  padding 0 0 0 108px
  position fixed
  top 0
  transition 0.3s background ease
  width 100%
  z-index 12

  &-logo
    height 23px
    margin-right 100px
    width 108px

.nav-strongblue
  align-items center
  background-color $wStrongBlue
  box-shadow 0 6px 8px 0 rgba(0,0,0,0.2)
  height 57px
  transition all 0.3s

.nav-strongblue
  .link-decorator
    opacity 0

.nav-strongblue
  .navbar-option-link:hover
    .link-decorator
      opacity 0

