.site-footer
  background-color $wWhite
  bottom 108px
  box-shadow 0 7px 30px -3px rgba(0, 0, 0, 0.1)
  display flex
  flex-direction row
  height 300px
  justify-content space-between
  left 108px
  padding 50px 70px 0 70px
  position absolute
  right 108px

  &-logo
    height 25px
    margin-bottom 25px
    width 115px

  &-column
    display flex
    flex-direction column

  &-row
    display flex
    flex-direction row

  &-info
    &-section
      display flex
      flex-direction row
      justify-content space-between
      margin-left 130px
      width 100%

    &-content
      margin-bottom 30px

  &-titles
    color #313131
    font-size $wFontH4
    letter-spacing 2px
    text-transform uppercase

    &-container
      margin-bottom 40px

  &-text
    display flex
    flex-direction column
    font-size $wFontH5
    line-height 19px

  &-text,
  a
    color #787878

  &-link
    color #787878
    transition all 0.3s

  &-icon
    height 22px
    width 22px

    &:first-child
      margin-right 3px

.footer-link-active,
.site-footer-link:hover
  font-weight 800
  text-decoration underline
  transition all 0.3s

.first-col-info
  margin-bottom 20px

@media screen and (max-width 786px)
  .site-footer
    bottom 0
    box-shadow 0px -10px 7px -1px rgba(0,0,0,0.22)
    flex-direction column
    height 650px
    justify-content center
    left 0
    padding 73px 30px
    right 0

    &-info-section
      flex-wrap wrap
      margin 40px 0 0 0

    &-titles
      &-container
        margin-bottom 15px

@media screen and (min-width 787px) and (max-width 1230px)
 .site-footer
   left 35px
   padding-left 30px
   padding-right 30px
   right 35px

   &-info-section
     margin-left 30px
