  .services-block
    padding 0 30px

  .block
    &-logistic
      width 185px

    &-operations
      margin 0 25px
      width 294px

    &-consultancy
      width 195px

@media screen and (max-width 768px)
  .services
    &-success
      &-cards
        &-container
          max-width 336px

